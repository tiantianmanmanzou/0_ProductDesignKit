{
    "files.associations": {
        "*.ttml": "xml",
        "*.ttss": "css"
    },
    "workbench.colorCustomizations": {
        "editor.background": "#ffffffea",
        "editor.foreground": "#000000",
        "editorWidget.background": "#2f2f2f",
        "editorWidget.foreground": "#FFFFFF",
        "breadcrumb.background": "#303030",
        "breadcrumb.foreground": "#FFFFFF",
        "breadcrumb.focusForeground": "#FFFFFF",
        "breadcrumb.activeSelectionForeground": "#FFFFFF",
        "editorGroupHeader.tabsBackground": "#303030",
        "tab.activeBackground": "#000000",
        "tab.activeForeground": "#FFFFFF",
        "tab.inactiveBackground": "#303030",
        "tab.inactiveForeground": "#CCCCCC",
        "sideBar.background": "#1E1E1E",
        "sideBar.foreground": "#FFFFFF",
        "activityBar.background": "#333333",
        "activityBar.foreground": "#FFFFFF",
        "panel.background": "#1E1E1E",
        "panel.foreground": "#FFFFFF",
        "titleBar.activeBackground": "#000000",
        "titleBar.activeForeground": "#FFFFFF",
        "list.activeSelectionForeground": "#FFFFFF",
        "list.inactiveSelectionForeground": "#FFFFFF",
        "list.hoverForeground": "#FFFFFF",
        "list.focusForeground": "#FFFFFF",
        "input.foreground": "#FFFFFF",
        "input.placeholderForeground": "#AAAAAA",
        "dropdown.foreground": "#FFFFFF",
        "editor.selectionBackground": "#8a8a8a60",
        "editor.selectionHighlightBackground": "#ff000040",
        "editor.inactiveSelectionBackground": "#ff000030",
        "editor.lineHighlightBackground": "#00000000",
        "editor.lineHighlightBorder": "#00000000",
        "editorCursor.foreground": "#ff0000",
        "editor.wordHighlightBackground": "#b3b3b3cb",
        "editor.wordHighlightStrongBackground": "#d6d5d560"
