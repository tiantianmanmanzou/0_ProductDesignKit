    "editor.fontFamily":  "Microsoft YaHei",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.cursorWidth": 3,
    "editor.cursorBlinking": "blink",
    "terminal.integrated.fontFamily":  "Microsoft YaHei",
    "terminal.integrated.fontSize": 14,
    "markdown.preview.font": "Microsoft YaHei",
    "debug.console.fontFamily": "Microsoft YaHei",
    "debug.console.fontSize": 14,
    "notebook.output.fontFamily": "Microsoft YaHei",
    "files.encoding": "utf8",
    "files.autoGuessEncoding": true,
    "markdown.preview.theme": "dark",
    "markdown.styles": [
        ".vscode/markdown-preview.css"
    ],
    "markdown.preview.breaks": true,
    "markdown.preview.scrollEditorWithPreview": true,
    "markdown.preview.scrollPreviewWithEditor": true,
    "markdown.preview.markEditorSelection": true,
    "markdown.extension.toc.levels": "1..6",
    "markdown.extension.toc.orderedList": false,
    "markdown.extension.toc.updateOnSave": true
}
